# Google Analytics MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Bearer token for API authentication
# Generate a secure random token, e.g., using: openssl rand -base64 32
MCP_BEARER_TOKEN=your-secure-token-here

# Required: Base64-encoded Google service account credentials
# 1. Create service account in Google Cloud Console
# 2. Download JSON key file
# 3. Base64 encode: base64 -w 0 service-account-key.json
# 4. Paste the output here
GOOGLE_APPLICATION_CREDENTIALS_BASE64=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9...

# Optional: Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Optional: Server configuration
HOST=0.0.0.0
PORT=8000

# Optional: Logging level (INFO, DEBUG, WARNING, ERROR)
LOGGING_LEVEL=INFO

# Optional: For production deployments
# RENDER=true
